@model Model.ViewModels.AccountModel
@{
    ViewBag.Title = "ChangPassword";
    Layout = "~/Views/Shared/_FrameLayout.cshtml";
}

@using (Html.BeginForm("ChangePassword", "User", FormMethod.Post, new { @class = "form" }))
{
    <h2>@Html.ActionLink("Thông tin", "Details", "User")</h2>
    <h2>Thay đổi mật khẩu </h2>
    @Html.AntiForgeryToken()
    <div class="row">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    </div>
    <hr />
    <div class="table-responsive row">
        <div class="col-sm-2" style="padding: 15px; margin: 0 auto;">
            <img src="~/Upload/Images/Employee/@Model.UrlAvatar" class="avatar img-center-in-div" height="100" width="100" />
            <br />
            <input type="hidden" value="@Model.EmployeeID" name="EmployeeID" />
            <input type="hidden" value="@Model.UrlAvatar" name="UrlAvatar" />
        </div>
        <div class="col-sm-10">
            <table class="hover-td table table-bordered col-sm-9">
                <tbody>
                    <tr>
                        <td>
                            <label class="control-label col-sm-4">Tên tài khoản: </label>
                            <div class="col-sm-8">
                                @Html.EditorFor(model => model.Username, new { htmlattributes = new { @class = "form-control", @readonly = "readonly" } })
                                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                            </div>
                        </td>
                        <td>
                            <label class="control-label col-sm-4">Mật khẩu hiện tại: </label>
                            <div class="col-sm-8">
                                @Html.EditorFor(model => model.OldPassword, new { htmlattributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td class="form-group">
                            <label class="control-label col-sm-4">Mật khẩu mới: </label>
                            <div class="col-sm-8">
                                @Html.EditorFor(model => model.Password, new { htmlattributes = new { @class = "form-control", @type="password" } })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                        </td>
                        <td class="form-group">
                            <label class="control-label col-sm-4">Xác nhận mật khẩu: </label>
                            <div class="col-sm-8">
                                @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", @type="password" } })
                                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
            <div><input class="btn btn-primary button-250" id="btn-save" type="submit" value="Lưu" /></div>
        </div>
    </div>
}

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}

