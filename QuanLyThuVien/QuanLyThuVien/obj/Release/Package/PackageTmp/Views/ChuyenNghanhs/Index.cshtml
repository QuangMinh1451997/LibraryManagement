@model IEnumerable<QuanLyThuVien.Models.ChuyenNghanh>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_FrameLayout.cshtml";
}

<h2>Danh sách chuyên nghành</h2>

<p>
    @Html.ActionLink("Thêm chuyên nghành mới", "Create")
</p>
<div class="table-responsive div-body show-list">

    <table class="table table-hover show-list">
        <thead>
            <tr>
                <th>Mã chuyên nghành</th>
                <th>Tên chuyên nghành</th>
                <th>Mô tả</th>
                <th>Deleted</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.MaChuyenNghanh</td>
                        <td>@item.TenChuyenNghanh</td>
                        <td>@item.MoTa</td>
                        <td>@item.Deleted</td>
                        <td>
                            <input class="check-page" type="hidden" value="2" />
                            @Html.ActionLink("Xem", "Details", "ChuyenNghanhs", new { id = item.MaChuyenNghanh }, htmlAttributes: new { @class = "details", @at = item.MaChuyenNghanh })
                            @Html.ActionLink("Sửa", "Edit", "ChuyenNghanhs", new { id = item.MaChuyenNghanh }, null)
                            @Html.ActionLink("Xóa", "delete", "ChuyenNghanhs", new { id = item.MaChuyenNghanh }, htmlAttributes: new { @class = "link-delete", @at = "/ChuyenNghanhs" })
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
@Scripts.Render("~/Scripts/DevScript/ShowDetails.js")
